<Window x:Class="NotyfiVsDp.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:NotyfiVsDp" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow" Width="800" Height="450" mc:Ignorable="d">
    <StackPanel>
        <local:UserControl1 x:Name="user1" />
        <local:UserControl2 x:Name="user2" />
        <TextBlock FontSize="50" Text="{Binding ElementName=user1, Path=MyProperty}" />
        <TextBlock FontSize="50" Text="{Binding ElementName=user2, Path=MyProperty}" />
    </StackPanel>
</Window>
