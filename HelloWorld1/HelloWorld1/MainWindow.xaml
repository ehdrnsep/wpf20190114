<Window x:Class="HelloWorld1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="35" HorizontalAlignment="Center">
            <Label FontSize="20" Content="이름을 입력하세요."/>
            <TextBox FontSize="20" x:Name="txtName" Width="150" Margin="10,0,10,0"></TextBox>
            <Button FontSize="20" Click="Button_Click">Say Hello!</Button>
        </StackPanel>
    </Grid>
</Window>
